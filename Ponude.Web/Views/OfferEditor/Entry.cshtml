@model OfferViewModel

@{
    ViewData["Title"] = "Unos ponude";
}

<div class="container mt-4">
    <h1>Unos ponude</h1>

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5>Zaglavlje ponude</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="OfferNumber">Broj ponude:</label>
                        <input type="text" id="OfferNumber" class="form-control" value="@Model.OfferId" readonly />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="OfferDate">Datum ponude:</label>
                        <input type="date" id="OfferDate" name="OfferDate" class="form-control" value="@Model.OfferDate.ToString("yyyy-MM-dd")" readonly />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <form method="post" asp-action="SaveOffer">
@*         <div class="card">
            <div class="card-header bg-secondary text-white">
                <h5>Detalji ponude</h5>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="OfferDescription">Opis ponude:</label>
                    <textarea id="OfferDescription" name="OfferDescription" class="form-control" rows="4">@Model.OfferDescription</textarea>
                </div>

                <div class="form-group">
                    <label for="OfferAmount">Iznos ponude:</label>
                    <input type="number" id="OfferAmount" name="OfferAmount" class="form-control" step="0.01" value="@Model.OfferAmount" />
                </div>
            </div>
        </div> *@

        <div class="mt-3">
            <button type="submit" class="btn btn-success">Spremi ponudu</button>
            <a asp-action="Index" class="btn btn-secondary">Poništi</a>
        </div>
    </form>
</div>
